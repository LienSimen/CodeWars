using System.Linq;
â€‹
public class Kata
{
    public static string Rot13(string message)
    {
        return new string(message.Select(c => 
        {
            if(char.IsLetter(c))
            {
                int offset = char.IsUpper(c) ? 'A' : 'a';
                return (char)((c - offset + 13) % 26 + offset);
            }
            return c;
        }).ToArray());
    }
}