using System;
â€‹
public class Kata
{
  public static string[] TowerBuilder(int nFloors)
  {
    string[] tower = new string[nFloors];
    for(int i = 0; i < nFloors; i++)
    {
        tower[i] = new string('*', i * 2 + 1).PadLeft(nFloors + i).PadRight(nFloors * 2 - 1);
    }
    return tower;
  }
}