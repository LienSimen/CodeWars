using System;
using System.Linq;
â€‹
public class Persist
{
    public static int Persistence(long n)
    {
        int count = 0;
        while (n >= 10)
        {
            n = n.ToString().Select(c => (long)(c - '0')).Aggregate((a, b) => a * b);
            count++;
        }
        return count;
    }
}
