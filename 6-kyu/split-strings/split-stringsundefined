using System.Text.RegularExpressions;
using System.Linq;
public class SplitString
{
  public static string[] Solution(string str)
  {
    if (str.Length % 2 != 0)
    {
      str += "_";
    }
â€‹
    return Regex.Matches(str, "\\w{2}")
                .Cast<Match>()
                .Select(m => m.Value)
                .ToArray();
  }
}