 
using System.Text.RegularExpressions;
using Xunit.Sdk;
​
public class Kata
{
  // Title Case all except minorWords unless its in start of sentence. 
  public static string TitleCase(string title, string minorWords="")
  {
    var titleArray = title.Split(' ').ToArray();
​
    foreach(var word in titleArray)
    {
      if (Regex.Match(title, word).Success)
        return char.ToUpper(word[0]) + word.Substring(1);
    }
    return "";
  }
}