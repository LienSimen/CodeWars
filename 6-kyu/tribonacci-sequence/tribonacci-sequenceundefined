 
using System;
using System.Linq;
​
public class Xbonacci
{
    public double[] Tribonacci(double[] signature, int n)
    {
      if (n == 0)
    {
      return new double[n];
    }
    double[] result = new double[n];
        return Enumerable.Range(0, n)
            .Select(i => i < 3 ? signature[i] : signature[i - 1] + signature[i - 2] + signature[i - 3])
            .ToArray();
    }
}
