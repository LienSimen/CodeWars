using System;
using System.Linq;
â€‹
public class Kata
{
  public static bool IsAscOrder(int[] arr)
  {
    // arr.SequenceEqual(arr.OrderBy(x => x));
    if (arr.Length <= 1)
      return true;
    
    for (int i = 0; i < arr.Length - 1; i++)
    {
      if (arr[i] > arr[i + 1])
        return false;
    }
    return true;
  }
}