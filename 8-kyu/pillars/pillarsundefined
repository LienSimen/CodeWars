public static class Kata
{
    public static int Pillars(int numPill, int dist, int width)
    {
        if (numPill == 1)
        {
            return 0;
        }
        
        int totalDistance = (numPill - 1) * dist * 100 + (numPill - 2) * width;
        
        return totalDistance > 0 ? totalDistance : 0;
    }
}